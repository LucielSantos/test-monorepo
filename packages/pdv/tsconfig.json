{
  "compilerOptions": {
    "allowJs": true,
    "module": "CommonJS",
    "target": "ES2021",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "vy/*": ["./src/*"]
    }
  },

  "exclude": [
    "build",
    "node_modules"
  ],
  "include": [
    "src" 
  ],
}
